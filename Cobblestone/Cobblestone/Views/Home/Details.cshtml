@model Cobblestone.Models.Employee

<h2>
    Employee Information 
</h2>

<div class="form-group">
    @Html.LabelFor(x=>x.FirstName)
    @Html.TextBoxFor(x=>x.FirstName, new  {  @class="form-control", @readonly = "true" })
</div>
<div class="form-group">
    @Html.LabelFor(x => x.LastName)
    @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", @readonly ="true" })
</div>
<div class="form-group">
    @Html.LabelFor(x => x.Age)
    @Html.TextBoxFor(x => x.Age, new { @class = "form-control", @readonly = "true" })
</div>

<div class="row">
    @Html.ActionLink("Back", "ListView", "Home")
</div>



